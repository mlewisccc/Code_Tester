
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All C++ Files",
            "type": "shell",
            "command": "clang++", // Use 'g++' if you prefer
            "args": [
                "-g", // Include debugging symbols
                "${workspaceFolder}/*.cpp", // Compile all .cpp files in the workspace folder
                "-o", // Specify the output file
                "${fileDirname}/myProgram.out" // Name the executable myProgram.out
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Makes this the default build task (run with Cmd+Shift+B)
            },
            "detail": "Compiles all project C++ files into an executable."
        }
    ]
}

